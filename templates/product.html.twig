{% include "base.html.twig" %}
{% include "header.html.twig" %}

<div class="row">
    <div class="col-md-6"><img src="{{ asset('uploads/images/products/'~product.image) }}"></div>
    <div class="col-md-6">
        <ul  class="list-group">
            <li class="list-group-item">{{product.name}}</li>
            <li class="list-group-item">{{product.description}}</li>
            <li class="list-group-item">prix: {{product.price}} â‚¬</li>
        </ul>
        <a href="{{ path('addToCart', {'id': product.id }) }}" type="button" class="btn btn-info btn-lg">
            <span class="glyphicon glyphicon-shopping-cart"></span> Ajouter au panier
        </a>
    </div>
</div>

<div class="row">
    <div class="col-sm-12 blog-main">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="bg-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        {{ form_start(form) }}
        <div class="form-group col-md-4 pull-right">
            {{ form_widget(form.comment) }}
        </div>
        <div class="form-group col-md-4 pull-right">
            {{ form_widget(form.submit) }}
        </div>
        {{ form_end(form) }}


    </div>
</div>
<div class="row comments">
    {% for comment in comments %}
        <div class="comment">
            <div>
                <div>{{ comment.user }} :</div>
            </div>
            <div style="border-bottom: 3px solid black; padding: 50px;">
                <div><p>{{ comment.comment }} </p></div>
            </div>
        </div>

    {% endfor %}
</div>
{% include "footer.html.twig" %}