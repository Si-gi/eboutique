{% include "base.html.twig" %}
{% include "header.html.twig" %}





<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal">ColoW</h1>
        <p class="lead font-weight-normal">A E-commerce site to color your world</p>

    </div>
    <div class="product-device shadow-sm d-none d-md-block"></div>
    <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
</div>


<div class="row">
    {% for product in products %}

            <div class="col-md-6">
                <a href="{{path('product',{'id': product.id })}}">
                <div class="bg-dark mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center text-white overflow-hidden">
                    <div class="my-3 py-3">
                        <h2 class="display-5">{{ product }}</h2>
                        <p class="lead">Protection contre les lacrymos.</p>
                    </div>
                    <div class="bg-light shadow-sm mx-auto" style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;">
                        <img src="{{ asset('uploads/images/products/'~product.image) }}" style="max-width: 100%; border-radius: 21px 21px 0 0; max-height: 300px"/>
                    </div>
                </div>
                </a>
            </div>

    {% endfor %}


</div>

{% include "footer.html.twig" %}